{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"composite": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@renderer/*": ["src/renderer/src/*"]
		}
	},
	"include": ["src/renderer/src/env.d.ts", "src/renderer/src/**/*", "src/renderer/src/**/*.tsx", "src/*.ts"]
}
